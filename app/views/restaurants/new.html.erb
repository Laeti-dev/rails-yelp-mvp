<div class="container-fluid">
  <nav class="navbar navbar-light bg-light">
    <%= link_to "Yelp Copycat", restaurants_path, class: "navbar-brand" %>
  </nav>
  <div class="mt-3">
    <%= simple_form_for (@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.submit 'Add a restaurant', class: 'btn btn-light border rounded-pill shadow-sm' %>
    <% end %>
  </div>
</div>
