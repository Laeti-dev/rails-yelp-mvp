<div class="container">
  <nav class="navbar fixed-top navbar-light bg-light">
    <%= link_to "Yelp Copycat", restaurants_path, class: "navbar-brand" %>
    <%# <%= link_to "Add a review", new_restaurant_review_path(restaurant), class: "btn btn-primary" %>
    </div>
  </nav>
  <div class="container-fluid mt-5">
    <% @restaurants.each do |restaurant| %>
      <div class="card my-3 shadow p-3 mb-5 bg-white rounded" style="width: 24rem;">
        <img src="https://loremflickr.com/320/240/restaurant" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= link_to restaurant.name, restaurant_path(restaurant) %></h5>
          <p class="card-text"><%= restaurant.category.capitalize %> cuisine.</p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    <% end %>
  </div>

</div>
