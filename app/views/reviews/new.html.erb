<div class="container-fluid">
  <nav class="navbar navbar-light bg-light">
    <%= link_to "Yelp Copycat", restaurants_path, class: "navbar-brand" %>
  </nav>
  <div class="mt-3">
    <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :rating, as: :radio_buttons, collection: 0..5, wrapper: :vertical_collection_inline %>
      <%= f.input :content %>
      <%= f.submit 'Add your review', class: 'btn btn-light border rounded-pill shadow-sm' %>
    <% end %>
  </div>
</div>
